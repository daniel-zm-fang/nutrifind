{
    "manifest_version": 2,
    "name": "Nutrifind",
    "version": "0.1.0",
    "description": "an extension that find you find healthy and delicious food",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Popup"
    },
    "permissions": ["storage", "tabs"],
    "content_security_policy": "script-src 'self' https://unpkg.com/compromise https://unpkg.com/compromise-numbers; object-src 'self';"
}